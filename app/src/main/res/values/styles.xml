<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomActionButtonOverflow</item>
        <item name="android:textColorHint">@android:color/primary_text_light</item>
        <item name="colorControlNormal">@android:color/primary_text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
        <!--<item name="colorControlActivated">#ff0000</item>-->
        <item name="colorControlHighlight">@android:color/primary_text_dark</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/menuBackground</item>
    </style>
    <style name="CustomActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/cog</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Settings"</item>
    </style>
    <style name="CustomButton">
        <item name="android:textColor">@color/iconText</item>
    </style>
    <style name="CustomToggleButton">
        <item name="android:textColor">@color/toggle_color</item>
    </style>
    <style name="LightEditTextstyle">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="ViewHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/headerTitleSize</item>
    </style>
    <style name="HintText">
        <item name="android:textColor">@color/iconText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">5px</item>
    </style>

</resources>
