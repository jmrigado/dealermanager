<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivityFragment"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:id="@+id/gridRowOneLayout"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <com.rivetry.dealermanager.custom.IconButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Bar"
                android:drawableTop="@drawable/drink"
                android:id="@+id/button1"
                android:background="@drawable/ripple_blue1"
                android:textColor="@color/white"
                android:layout_weight="0.5" />

            <com.rivetry.dealermanager.custom.IconButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Chips"
                android:drawableTop="@drawable/coins"
                android:id="@+id/button2"
                android:background="@drawable/ripple_blue2"
                android:textColor="@color/white"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:id="@+id/gridRowTwoLayout"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <com.rivetry.dealermanager.custom.IconButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="FSR"
                android:drawableTop="@drawable/person"
                android:id="@+id/button3"
                android:background="@drawable/ripple_blue3"
                android:textColor="@color/white"
                android:layout_weight="0.5" />

            <com.rivetry.dealermanager.custom.IconButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Security"
                android:drawableTop="@drawable/badge"
                android:id="@+id/button4"
                android:background="@drawable/ripple_blue4"
                android:textColor="@color/white"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <com.rivetry.dealermanager.custom.IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="Game Controls"
            android:drawableTop="@drawable/equalizer"
            android:background="@drawable/ripple_transparent"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:id="@+id/btnGameControls" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewGameControls"
            android:layout_alignParentBottom="false"
            android:background="@color/blue5"
            android:visibility="invisible"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnCloseGameControls"
                    android:background="@color/transparent"
                    android:textSize="16pt"
                    android:textIsSelectable="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Player Wins"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Banker Wins"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Tie"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:text="Natural 8"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="4dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:text="Natural 9"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:text="Tiger 8"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:text="Pheonix 7"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="New Shoe"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:visibility="invisible"
                    android:layout_margin="2dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Undo"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_box_button"
                    android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
